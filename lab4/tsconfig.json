{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "types": ["node", "mocha", "chai"]
  },
  "include": ["src/**/*", "src/test/**/*"],
  "exclude": ["node_modules", "dist"]
}
